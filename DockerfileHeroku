FROM node:17-alpine as frontbuilder

WORKDIR /build
COPY frontend/package.json frontend/yarn.lock /build/
RUN yarn install --frozen-lockfile --no-cache
COPY frontend .
RUN yarn run build

FROM python:3.10-alpine as backend

WORKDIR /usr/src/backend
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

COPY ./backend .

RUN pip install --upgrade pip \
    && pip install -r requirements.txt \
    && python manage.py migrate \ 
    && python manage.py collectstatic

COPY --from=frontbuilder /build/dist /usr/share/nginx/html;
COPY /usr/src/backend/staticfiles /usr/share/nginx/html;